<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        app:title="TPG"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:background="#303030"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Dark"/>

    <Button
        android:id="@+id/btnScannerQRCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scanner_un_qr_code"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"
        />

    <Button
        android:id="@+id/btnChercherMachine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rechercher_une_machine_par_son_id"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"

        />

    <Button
        android:id="@+id/btnAppelerExpert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/appeler_un_expert"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginHorizontal="24dp"
        android:layout_marginVertical="16dp"

        />

</LinearLayout>